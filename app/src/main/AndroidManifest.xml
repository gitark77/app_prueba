<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyAppCancheito"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/tienda_icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tienda_icono_round"
        android:supportsRtl="true">
        <activity
            android:name=".ui.auth.SelecionarTipoActivity"
            android:exported="false"
            android:theme="@style/Theme.Myappcancheito.NoActionBar"/>
        <activity
            android:name=".ui.auth.LoginPostulanteActivity"
            android:exported="false"
            android:theme="@style/Theme.Myappcancheito"/>
        <activity
            android:name=".ui.auth.RegisterPostulanteActivity"
            android:exported="false"
            android:theme="@style/Theme.Myappcancheito"/>
        <activity
            android:name=".ui.auth.LoginEmpleadorActivity"
            android:exported="false"
            android:theme="@style/Theme.Myappcancheito" />
        <activity
            android:name=".ui.auth.RegisterEmpleadorActivity"
            android:exported="false"
            android:theme="@style/Theme.Myappcancheito" />
        <activity
            android:name=".ui.main.EmpleadorActivity"
            android:exported="false"
            android:theme="@style/Theme.Myappcancheito.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Myappcancheito.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivityPostulante"
            android:exported="true"
            android:theme="@style/Theme.Myappcancheito.NoActionBar" />
    </application>

</manifest>